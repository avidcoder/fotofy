doctype html
html
  head
    title Fotofy
    link(rel="stylesheet", href="bower_components/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="stylesheets/login.css")
  body
    div(class="wrapper")
      img(src="/images/signup_background1.jpg", class="background-img")
      div(class="login-content")
        div(class="login-form")
          div(class="form-heading-text")
          form(class="form-horizontal", role="form")
            div(class="form-group")
              label(class="col-sm-2 control-label", for="inputEmail") Email
              div(class="col-sm-10")
                input(type="text", id="inputEmail", placeholder="Email", class="form-control")
            div(class="form-group")
              label(class="col-sm-2 control-label", for="inputPassword") Password
              div(class="col-sm-10")
                input(type="text", id="inputPassword", placeholder="Password", class="form-control")
            div(class="form-group")
              div(class="col-sm-offset-2 col-sm-10")
                button(type="submit", class="btn btn-default", placeholder="Password") Sign In

      div(class="signup-content")
        div(class="signup-form")
          div(class="form-heading-text")
            p Sign up!
          form(class="form-horizontal", role="form")
            div(class="form-group")
              label(class="col-sm-2 control-label", for="inputEmail") Email
              div(class="col-sm-10")
                input(type="text", id="inputEmail", placeholder="Email", class="form-control")    
            div(class="form-group")
              label(class="col-sm-2 control-label", for="inputPassword") Password
              div(class="col-sm-10")
                input(type="text", id="inputPassword", placeholder="Password", class="form-control")
            div(class="form-group")
              label(class="col-sm-2 control-label", for="confirmPassword") Confirm
              div(class="col-sm-10")
                input(type="text", id="confirmPassword", placeholder="Confirm Password", class="form-control")
            div(class="form-group")
              div(class="col-sm-offset-2 col-sm-10")
                button(type="submit", class="btn btn-default", placeholder="Password") Sign Up